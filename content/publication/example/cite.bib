  issn = {0882-8156, 1520-0434},
  doi = {10.1175/WAF-D-19-0200.1},
  abstract = {The demand of subseasonal predictions (from one to about four weeks in advance) has been considerably increasing as these predictions can potentially help prepare for the occurrence of high-impact events such as heat or cold waves that affect both social and economic activities. This study aims to assess the subseasonal temperature prediction quality of the European Centre for Medium-Range Weather Forecasts (ECMWF) against the Japan Meteorological Agency reanalyses. Two consecutive weeks of July 2017 were analyzed, which presented anomalously cold and warm conditions over central South America. The quality of 20 years of hindcasts for the two investigated weeks was compared to that for similar weeks during the JJA season and of 3 years of real-time forecasts for the same season. Anomalously cold temperatures observed during the week of 17\textendash 23 July 2017 were well predicted one week in advance. Moreover, the warm anomalies observed during the following week of 24\textendash 30 July 2017 were well predicted two weeks in advance. Higher linear association and discrimination (ability to distinguish events from nonevents), but reduced reliability, was found for the 20 years of hindcasts for the target week than for the hindcasts produced for all of the JJA season. In addition, the real-time forecasts showed generally better performance over some regions of South America than the hindcasts.},
  file = {/home/mariano/Dropbox/zotero-library/2020/Alvarez et al_2020_Assessment of ECMWF Subseasonal Temperature Predictions for an Anomalously Cold2.pdf;/home/mariano/Dropbox/zotero-library/Alvarez et al/Alvarez et al_2020_Assessment of ECMWF Subseasonal Temperature Predictions for an Anomalously Cold.pdf},
  journal = {Weather and Forecasting},
  language = {en},
  number = {5}
}

